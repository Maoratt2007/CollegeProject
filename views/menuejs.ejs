function addOrderProduct(name, price, id, category,description, image) {
  const orderListContainer = $('#orderList');
  const orderData = JSON.parse(localStorage.getItem('orderData'));


  // Prepare the data for the order
  const productData = {
    name: name,
    price: price,
    category:category,
    description:description, 
    image:image
    // Add other data fields as needed
  };
  orderData.items.push(productData);
  orderData.price += parseFloat(price); // Make sure to convert price to a number

  // Send a POST request to the server's API endpoint for order creation
  $.ajax({
    url: 'http://localhost:3000/api/products', // Update the URL to your API endpoint
    method: 'POST',
    contentType: 'application/json',
    data: JSON.stringify(productData),
    success: function (response) {
      // Handle success response
      const OrderProductElement = `
        <div class="productOrder">
          <h2>Name: "${response.name}"</h2>
          Price: "${response.price}"$
          <button class="removeProductOrder"> <a class="fas fa-trash" onclick='removeOrderProduct("${response._id}")'></a></button>
        </div>
      `;
      orderListContainer.append(OrderProductElement);
    },
    error: function (error) {
      console.error('Error creating order:', error);
    },
  });
}


