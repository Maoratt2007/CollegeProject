    <script>

//graph 1 the user that paid almost money
let orderData1;
  let arr_users1;

    function fetchusersDetails1() {

        // Fetch branch details for each branch
      
            $.ajax({
                url: `http://localhost:3000/api/order`,
                method: "GET",
                success: function(data) {
                    arr_users1 = data;
                    const users= parseData1(data)
                    drawChart1(users);
                    
                },
                error: function(error) {
                    console.error(error);
                }
            });      
        
    }

    function parseData1(data) {
        const arr = [];
        data.forEach(user=> {
            console.log(user._id);
      
                arr.push({
                     name: user.name,
                     total_price_user: user.total_price_user
                });

        });
        return arr;


    }

    function drawChart1(data) {
        console.log(data);
        const width = 928;
            const height = 500;
            const marginTop = 20;
            const marginRight = 30;
            const marginBottom = 30;
            const marginLeft = 40;

            const x = d3.scaleBand()
    .domain(data.map(d => d.name))
    .range([marginLeft, width - marginRight])
    .padding(0.8);

            const y = d3.scaleLinear()
                .domain([0, d3.max(data, d => d.total_price_user)])
                .range([height - marginBottom, marginTop]);

            const svg = d3.select('.line-chart-1')
                .attr('width', width)
                .attr('height', height);

            const g = svg.append('g')
                .attr("transform", `translate(0,${height - marginBottom})`)
                .call(d3.axisBottom(x).tickSizeOuter(0));

            svg.append("g")
            .attr("fill", "steelblue")
            .selectAll()
            .data(data)
            .enter()
            .append("rect")
            .attr("x", d => x(d.name))
            .attr("y", d => y(d.total_price_user))
            .attr("height", d => y(0) - y(d.total_price_user))
            .attr("width", x.bandwidth());

        svg.append("g")
            .attr("transform", `translate(0, ${height - marginBottom})`)
            .call(d3.axisBottom(x).tickSizeOuter(0));


        svg.append("g")
            .attr("transform", `translate(${marginLeft},0)`)
            .call(d3.axisLeft(y).tickFormat(y => y.toFixed()).ticks(10))//the jump
            .call(g => g.append("text")
                .attr("x", -marginLeft)
                .attr("y", 10)
                .attr("fill", "currentColor")
                .attr("text-anchor", "start")
                .text("↑ Number of orders for the branch (+)"));

        return svg.node();
}

// graph 2 the user that make almost orders
  let orderData2;
  let arr_users2;


  function fetchusersDetails2() {
    let users = []; // Define users array outside the AJAX calls
    let  usersgroupby=[];

    $.ajax({
        url: `http://localhost:3000/api/user`,
        method: 'GET',
        dataType: 'json',
        contentType: 'application/json',
        success: function(data) {
            users = data;
            users.forEach(function(user) {
                usersgroupby.push(user._id);
            });
            console.log(usersgroupby);
            $.ajax({
                    url: `http://localhost:3000/api/order`,
                    method: 'GET',
                    dataType: 'json',
                    contentType: 'application/json',
                    data: {
                        group: true,
                        usersgroupby:usersgroupby
                    },
                    success: function(data) {
                        arr_users2 = data;
                        const parsedData = parseData2(data);
                        drawChart2(parsedData);
                       
                    },
                    error: function(error) {
                        console.error(error);
                    }
                });
        },
        error: function(error) {
            console.error(error);
        }
    });


}

    function parseData2(data) {
    // Assuming your data is already structured with _id (userId) and orderCount
    return data.map(user => ({
        name: user._id,
        value: user.orderCount
    }));
}

    function drawChart2(data) {
        console.log(data);
        const width = 928;
            const height = 500;
            const marginTop = 20;
            const marginRight = 30;
            const marginBottom = 30;
            const marginLeft = 40;

            const x = d3.scaleBand()
    .domain(data.map(d => d.name))
    .range([marginLeft, width - marginRight])
    .padding(0.8);

            const y = d3.scaleLinear()
                .domain([0, d3.max(data, d => d.value)])
                .range([height - marginBottom, marginTop]);

            const svg = d3.select('.line-chart-2')
                .attr('width', width)
                .attr('height', height);

            const g = svg.append('g')
                .attr("transform", `translate(0,${height - marginBottom})`)
                .call(d3.axisBottom(x).tickSizeOuter(0));

            svg.append("g")
            .attr("fill", "steelblue")
            .selectAll()
            .data(data)
            .enter()
            .append("rect")
            .attr("x", d => x(d.name))
            .attr("y", d => y(d.value))
            .attr("height", d => y(0) - y(d.value))
            .attr("width", x.bandwidth());

        svg.append("g")
            .attr("transform", `translate(0, ${height - marginBottom})`)
            .call(d3.axisBottom(x).tickSizeOuter(0));


        svg.append("g")
            .attr("transform", `translate(${marginLeft},0)`)
            .call(d3.axisLeft(y).tickFormat(y => y.toFixed()).ticks(10))
            .call(g => g.append("text")
                .attr("x", -marginLeft)
                .attr("y", 10)
                .attr("fill", "currentColor")
                .attr("text-anchor", "start")
                .text("↑ Number of orders for the branch (+)"));

        return svg.node();
}
