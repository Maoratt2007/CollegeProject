<div id="userDetails">

</div>

<!-- Filter button and category buttons -->


<script>
  // Replace this URL with your actual API endpoint to fetch product data


  function GetUserDetail() {
    const userId = localStorage.getItem('userId');
    const user=userId;
    console.log(userId);
    $.ajax({
      url: `http://localhost:3000/api/user/${userId}`,
      method: 'GET',
      dataType: 'json',
      success: function (data) {
        // Product data received successfully
        console.log(data.name)
        renderUserDetail(data.name,data.email);
      },
      error: function (err) {
        // Error handling in case API call fails
        console.log(err)
        alert('Failed to fetch user data.');
      }
      });
  }

  // Function to render the product data on the screen
  function renderUserDetail(name,email) {
    const userDetailContainer = $('#userDetails');
    userDetailContainer.empty(); // Clear existing products
    const userDetailElement = `
      <div class="userdetail">
         <h3> Name: ${name} </h3> 
         <h3> Email: ${email} </h3> 
        </div>
      `;
      userDetailContainer.append(userDetailElement);


  }




  $(document).ready(function () {
    console.log('insert to function');
    GetUserDetail();
    });
  
</script>
